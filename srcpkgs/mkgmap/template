do_install() {
	vbin ${FILESDIR}/mkgmap

	vmkdir usr/share/${pkgname}
	cp -R * ${DESTDIR}/usr/share/${pkgname}/

	rm ${DESTDIR}/usr/share/${pkgname}/doc/mkgmap.1
	vman doc/mkgmap.1
}
